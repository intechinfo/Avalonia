<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:control="clr-namespace:ITI_UITest.Views"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <control:TreeViewControl Grid.Column="0" Grid.RowSpan="3" Name="TreeView" DataContext="{Binding TreeVM}"/>
        <control:RunTestControl Grid.Column="1"  Grid.ColumnSpan="2" DataContext="{Binding RunTestVM}" />
        <control:TabControl Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Name="TabControl" DataContext="{Binding TabControlVM}"/>
    </Grid>

</UserControl>
