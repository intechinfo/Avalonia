<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Vertical"
                VerticalAlignment="center"
                Margin="16">
        <StackPanel Orientation="Horizontal"
                    Spacing="20">
            <Button Command="{Binding StartCommand}">Start</Button>
            <Button Command="{Binding StopCommand}">Stop</Button>
            <ProgressBar IsIndeterminate="{Binding IsRunning}" Maximum="100" Value="{Binding Value}"></ProgressBar>
            <TextBlock Text="{Binding ResultString}"></TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
